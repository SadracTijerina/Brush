<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/public_profile_toolbar"
            layout="@layout/app_bar_layout">

        </include>

        <ImageButton
            android:id="@+id/public_profile_default_pic"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_below="@id/public_profile_toolbar"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:paddingTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/dfp" />

        <TextView
            android:id="@+id/public_profile_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/public_profile_default_pic"
            android:layout_marginTop="100dp"
            android:text="Full Name"
            android:gravity="top"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/public_profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/public_profile_full_name"
            android:layout_toRightOf="@id/public_profile_default_pic"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="username"
            android:gravity="top"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark" />

        <ImageButton
            android:id="@+id/public_profile_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_button"
            android:background="@null"
            android:layout_below="@id/public_profile_username"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/public_profile_bio"
            android:layout_width="275dp"
            android:layout_height="90dp"
            android:layout_below="@id/public_profile_default_pic"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="65dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Welcome to my art page! I specialize in tradiitional and digital art!" />

        <ImageButton
            android:id="@+id/public_profile_updates"
            android:src="@drawable/updates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_below="@id/public_profile_default_pic"
            android:layout_centerInParent="true"
            android:layout_marginTop="170dp"/>

        <ImageButton
            android:id="@+id/public_profile_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gallery_bar"
            android:background="@null"
            android:layout_below="@id/public_profile_updates"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"/>

        <ImageButton
            android:id="@+id/public_profile_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_below="@id/public_profile_gallery"/>

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>