<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_post_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scaleType="fitCenter"
    tools:context=".BidPostActivity">

    <include
        android:id="@+id/update_post_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageButton
        android:id="@+id/bid_image"
        android:layout_width="206dp"
        android:layout_height="312dp"
        android:layout_below="@+id/update_post_page_toolbar"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_marginBottom="354dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/postlogo" />


    <EditText
        android:id="@+id/bid_money"
        android:layout_width="153dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/bid_time"
        android:layout_alignStart="@+id/bid_time"
        android:layout_alignLeft="@+id/bid_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter price"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/bid_time"
        android:layout_width="154dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/bid_description"
        android:layout_alignStart="@+id/bid_description"
        android:layout_alignLeft="@+id/bid_description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter days of bidding time"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/bid_description"
        android:layout_width="150dp"
        android:layout_height="61dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="166dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:gravity="center"
        android:hint="Set description...."
        android:inputType="textMultiLine" />


    <TextView
        android:id="@+id/bid_select"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/category_group"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="19dp"
        android:layout_toStartOf="@+id/bid_money"
        android:layout_toLeftOf="@+id/bid_money"
        android:text="Select Category:" />

    <RadioGroup
        android:id="@+id/category_group"
        android:layout_width="201dp"
        android:layout_height="135dp"
        android:layout_above="@+id/bid_post"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="41dp"
        android:layout_toStartOf="@+id/bid_description"
        android:layout_toLeftOf="@+id/bid_description">


        <RadioButton
            android:id="@+id/bid_category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Art" />

        <RadioButton
            android:id="@+id/bid_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traditional Art" />


        <RadioButton
            android:id="@+id/bid_category3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photography" />

        <RadioButton
            android:id="@+id/bid_category4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artisan Crafts" />


    </RadioGroup>


    <Button
        android:id="@+id/bid_post"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="78dp"
        android:background="@drawable/buttons"
        android:text="Post Bidding Item" />

</RelativeLayout>