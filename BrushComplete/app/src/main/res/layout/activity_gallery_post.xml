<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_post_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scaleType="fitCenter"
    tools:context=".GalleryPostActivity">

    <include
        android:id="@+id/g_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageButton
        android:id="@+id/post_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/g_page_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="349dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/postlogo" />


    <EditText
        android:id="@+id/post_description"
        android:layout_width="154dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="178dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:fontFamily="@font/futura"
        android:gravity="center"
        android:hint="Set description...."
        android:inputType="textMultiLine" />


    <TextView
        android:id="@+id/post_select"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura"
        android:layout_above="@+id/category_group"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="169dp"
        android:layout_marginRight="169dp"
        android:layout_marginBottom="23dp"
        android:text="Select Category:" />

    <RadioGroup
        android:id="@+id/category_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/post_description"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="2dp">


        <RadioButton
            android:id="@+id/post_category1"
            android:layout_width="wrap_content"
            android:fontFamily="@font/futura"
            android:layout_height="wrap_content"
            android:text="Digital Art" />

        <RadioButton
            android:id="@+id/post_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura"
            android:text="Traditional Art" />


        <RadioButton
            android:id="@+id/post_category3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura"
            android:text="Photography" />

        <RadioButton
            android:id="@+id/post_category4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura"
            android:text="Artisan Crafts" />


    </RadioGroup>


    <Button
        android:id="@+id/post_post"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/futura"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="78dp"
        android:background="@drawable/buttons"
        android:text="Post to Gallery" />

</RelativeLayout>