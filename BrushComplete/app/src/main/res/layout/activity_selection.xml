<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    <include
        android:id="@+id/selection_toolbar"
        layout="@layout/app_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/selection_toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/default_profile_picture"
            android:id="@+id/selection_profilepicture" />

        <TextView
            android:id="@+id/selection_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="username"
            android:fontFamily="@font/futura"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/selection_image"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/selection_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The post description"
        android:fontFamily="@font/futura"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/selection_bid_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="price"
        android:fontFamily="@font/futura"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"/>
    <Button
        android:id="@+id/selection_buy_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:focusable="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/futura"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/buttons"
        android:textColorLink="@color/colorAccent"
        android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/selection_place_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Bid"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:focusable="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/futura"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/buttons"
            android:textColorLink="@color/colorAccent"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>







