<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/user_profile_settings_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_settings_default_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/user_profile_settings_toolbar"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop= "10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        />


    <EditText
        android:id="@+id/user_profile_settings_full_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_settings_default_pic"
        android:layout_marginTop="20dp"
        android:text="Full Name"
        android:ems="4"
        android:fontFamily="@font/futura"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/inputs"
        android:textColor="@color/colorPrimaryDark"
        android:singleLine="true" />

    <EditText
        android:id="@+id/user_profile_settings_username"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura"
        android:layout_below="@id/user_profile_settings_full_name"
        android:layout_marginTop="5dp"
        android:text="username"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:singleLine="true" />

    <EditText
        android:id="@+id/user_profile_settings_bio"
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/futura"
        android:layout_below="@id/user_profile_settings_username"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:ems="10"
        android:background="@drawable/inputs"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:inputType="text"
        android:layout_marginBottom="15dp"
        android:text="Bio"/>

    <Button
        android:id="@+id/user_profile_settings_confirm"
        android:layout_width="200dp"
        android:fontFamily="@font/futura"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_settings_bio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="CONFIRM"
        android:background="@color/colorAccent"
        />





</RelativeLayout>