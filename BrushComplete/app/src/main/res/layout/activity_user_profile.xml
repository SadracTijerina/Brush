<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <include
            android:id="@+id/user_profile_toolbar"
            layout="@layout/app_bar_layout">

        </include>

        <ImageView
            android:id="@+id/brushLogo"
            android:layout_width="155dp"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/search_users_bar_layout"
            android:layout_alignLeft="@+id/search_users_bar_layout"
            android:layout_alignBottom="@+id/search_users_bar_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="103dp"
            android:layout_marginRight="102dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/logo_word" />

        <ImageView
            android:layout_width="33dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="139dp"
            android:layout_marginLeft="139dp"
            android:layout_marginTop="181dp"
            android:layout_toRightOf="@id/user_profile_default_pic"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/pencil" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_default_pic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@id/user_profile_toolbar"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:background="@null"
            android:paddingTop="10dp"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/user_profile_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="170dp"
            android:gravity="top"
            android:paddingLeft="20dp"
            android:text="Full Name"
            android:fontFamily="@font/futura"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/user_profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_full_name"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="170dp"
            android:gravity="top"
            android:paddingLeft="20dp"
            android:fontFamily="@font/futura"
            android:text="username"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_profile_bio"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_default_pic"
            android:fontFamily="@font/futura"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:text="Welcome to my art page! I specialize in tradiitional and digital art!"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/user_profile_updates"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/user_profile_bio"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@drawable/bids"
            android:scaleType="centerCrop"
            android:src="@drawable/updates" />

        <ImageButton
            android:id="@+id/user_profile_gallery"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/user_profile_updates"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@drawable/bids"
            android:scaleType="centerCrop"
            android:src="@drawable/gallery_bar" />

        <ImageButton
            android:id="@+id/user_profile_bids"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/user_profile_gallery"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="@drawable/bids"
            android:scaleType="centerCrop"
            android:src="@drawable/mybids_bar" />


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>